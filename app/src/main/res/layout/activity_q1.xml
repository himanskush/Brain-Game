<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hali.braingame.Q1">

    <TextView
        android:id="@+id/timer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/a1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:onClick="question"
        android:tag="1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/a2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/a1"
        android:onClick="question"
        android:tag="2"
        android:textSize="40sp" />


    <Button
        android:id="@+id/a3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/a1"
        android:layout_toStartOf="@+id/a2"
        android:onClick="question"
        android:tag="3"
        android:textSize="40sp" />

    <Button
        android:id="@+id/a4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/a2"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/a3"
        android:onClick="question"
        android:tag="4"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/timer"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quesnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question No . 1"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/timer"
        android:layout_toEndOf="@+id/timer" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:padding="40dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/timer"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/quesnumber"
        android:textSize="25sp" />

    <Button
        android:id="@+id/retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:onClick="retry"
        android:text="Retry"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>
